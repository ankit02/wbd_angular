<h1>Listing experiences</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.experience_name %><%= link_to 'Show', experience %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%#= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' }, "ng-click" => "deleteExperience("+ experience.id.to_s + ")" %>
          <a ng-click = "deleteExperience(<%= experience.id.to_s %>)">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path %>
