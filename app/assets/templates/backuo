<br>

<div id="deleteConfirm" style="display:none;"> 
  Are you sure?<br>
</div>

<script>


$(document).on('click', '.deleteExperience' , function(){
     //alert("hello");
     $( "#deleteConfirm" ).dialog({
      autoOpen: false,
      show: {
        effect: "blind",
        duration: 1000
      },
      hide: {
        effect: "explode",
        duration: 1000
      }
      });
  var expid = $(this).attr('experienceid');
  alert(expid);
  $('div#deleteConfirm').append("<button class='deleteExperienceButton' ng-click='deleteExperience('"+ expid + "')'");
  $('div#deleteConfirm').dialog("open");
});


$('.deleteExperienceButton').on('click',function(){
   $('div#deleteConfirm').dialog("destroy").remove();
});



</script> 

